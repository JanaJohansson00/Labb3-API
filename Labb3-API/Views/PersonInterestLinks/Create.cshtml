@model Labb3_API.Models.PersonInterest

<h1>Create</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PersonId" class="control-label"></label>
        <select asp-for="PersonId" class="form-control" asp-items="ViewBag.Persons"></select>
        <span asp-validation-for="PersonId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InterestId" class="control-label"></label>
        <select asp-for="InterestId" class="form-control" asp-items="ViewBag.Interests"></select>
        <span asp-validation-for="InterestId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
